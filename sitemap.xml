---
layout: null
sitemap_exclude: y
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" 
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <!-- Homepage with highest priority -->
  <url>
    <loc>{{ site.url | append: '/' }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Blog posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url | append: post.url }}</loc>
    <lastmod>{% if post.last_modified_at %}{{ post.last_modified_at | date_to_xmlschema }}{% else %}{{ post.date | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
  </url>
  {% endfor %}

  <!-- Other pages -->
  {% for page in site.pages %}
    {% assign page_url = page.url %}
    
    <!-- Filter out non-indexable pages -->
    {% unless page_url contains ".css" or page_url contains ".xml" or page_url contains ".json" or page_url contains ".txt" or page_url contains "index.html" or page.sitemap_exclude == "y" %}
    <url>
      <loc>{{ site.url | append: page.url | replace: 'index.html', '' }}</loc>
      <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
    {% endunless %}
  {% endfor %}

</urlset>
